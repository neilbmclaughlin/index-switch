{
  "name": "index-switch",
  "version": "1.0.0",
  "description": "A function app to switch between an active and idle index to allow for zero azure search downtime with reindexing",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "durable-functions": "^1.1.4",
    "husky": "^1.3.1",
    "moment": "^2.24.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.12.1",
    "eslint-config-nhsuk": "^0.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run git-hook",
      "pre-push": "npm run git-hook"
    }
  },
  "scripts": {
    "code-coverage": "npm run code-coverage-generate && npm run code-coverage-check",
    "code-coverage-check": "./node_modules/istanbul/lib/cli.js check-coverage --config .istanbul.yml",
    "code-coverage-generate": "./node_modules/istanbul/lib/cli.js cover _mocha -- --exit --recursive",
    "git-hook": "npm run lint && npm run code-coverage",
    "lint": "eslint --ext .js,.json .",
    "test": "mocha --exit --recursive test"
  },
  "author": "Neil McLaughlin",
  "license": "MIT"
}
